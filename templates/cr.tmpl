<html>

<head>
    <title>Botsunit Taiga Tracker</title>
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
    <div class="container">
        <h3>
            {{ .title }}
        </h3>
        <p>
            Took {{ .time }} to retrieve datas
        </p>
        <h5>
            User Stories Accepted
        </h5>
        {{ range $user, $stories := .userStoriesDone }}
        <table>
            <thead>
                <tr>
                    <th data-field="id">Taiga Id</th>
                    <th data-field="name">Title</th>
                    <th data-field="name">User</th>
                </tr>
            </thead>
            <tbody>
                {{ range $index, $us := $stories }}
                <tr>
                    <td> {{ $us.ID }}</td>
                    <td>{{ $us.Subject }}</td>
                    <td>{{ $user }}</td>
                </tr>
                {{ end }}
            </tbody>
        </table>
        {{ end }}

        <h5>
            User Stories Rejected
        </h5>
        {{ range $user, $stories := .userStoriesRejected }}
        <table>
            <thead>
                <tr>
                    <th data-field="id">Taiga Id</th>
                    <th data-field="name">Title</th>
                    <th data-field="name">User</th>
                </tr>
            </thead>
            <tbody>
                {{ range $index, $us := $stories }}
                <tr>
                    <td> {{ $us.ID }}</td>
                    <td>{{ $us.Subject }}</td>
                    <td>{{ $user }}</td>
                </tr>
                {{ end }}
            </tbody>
        </table>
        {{ end }}


        <h5>
            Issues Accepted
        </h5>

        {{ range $user, $issueList := .issuesDone }}
        <table>
            <thead>
                <tr>
                    <th data-field="id">Taiga Id</th>
                    <th data-field="name">Title</th>
                    <th data-field="name">User</th>
                </tr>
            </thead>
            <tbody>
                {{ range $index, $issue := $issueList }}
                <tr>
                    <td> {{ $issue.ID }}</td>
                    <td>{{ $issue.Subject }}</td>
                    <td>{{ $user }}</td>
                </tr>
                {{ end }}
            </tbody>
        </table>
        {{ end }}

        <h5>
            Issues Rejected
        </h5>
        {{ range $user, $issueList := .issuesRejected }}
        <b></b>
        <table>
            <thead>
                <tr>
                    <th data-field="id">Taiga Id</th>
                    <th data-field="name">Title</th>
                    <th data-field="name">User</th>
                </tr>
            </thead>
            <tbody>
                {{ range $index, $issue := $issueList }}
                <tr>
                    <td> {{ $issue.ID }}</td>
                    <td>{{ $issue.Subject }}</td>
                    <td>{{ $user }}</td>
                </tr>
                {{ end }}
            </tbody>
        </table>
        {{ end }}
    </div>


</body>

</html>
